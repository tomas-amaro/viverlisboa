{
    "name": "viver-lisboa-website",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "20.10.0",
        "pnpm": "8.15.1"
    },
    "scripts": {
        "dev": "next dev",
        "dev:lisboa": "DEV_CAMPAIGN_DOMAIN=viverlisboa.pt next dev",
        "dev:avenidas": "DEV_CAMPAIGN_DOMAIN=viveravenidas.pt next dev",
        "dev:alvalade": "DEV_CAMPAIGN_DOMAIN=viveralvalade.pt next dev",
        "build": "next build",
        "build:domain": "node scripts/build-domain.js",
        "build:all": "node scripts/build-all-domains.js",
        "deploy:domain": "node scripts/deploy-domain.js",
        "deploy:cloudflare": "node scripts/deploy-cloudflare.js",
        "deploy:preview": "node scripts/deploy-cloudflare.js",
        "deploy:production": "node scripts/deploy-cloudflare.js",
        "discover-domains": "node scripts/discover-domains.js",
        "discover-domains:json": "node scripts/discover-domains.js --json",
        "validate-domains": "node scripts/discover-domains.js --validate",
        "verify-setup": "node scripts/verify-setup.js",
        "setup:check": "npm run verify-setup && npm run validate-domains",
        "start": "next start",
        "lint": "next lint",
        "type-check": "tsc --noEmit",
        "studio": "next dev",
        "sanity:build": "dotenv -e .env.local -- sanity build",
        "sanity:deploy": "sanity deploy",
        "sanity:deploy:local": "dotenv -e .env.local -- sanity deploy",
        "seed": "dotenv -e .env.local -- node scripts/seed-data.js",
        "clear-data": "dotenv -e .env.local -- node scripts/clear-data.js"
    },
    "dependencies": {
        "@portabletext/react": "^3.0.11",
        "@sanity/client": "^6.10.0",
        "@sanity/image-url": "^1.1.0",
        "@sanity/vision": "^3.99.0",
        "framer-motion": "^10.16.16",
        "next": "^14.0.4",
        "next-sanity": "^9.12.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "sanity": "^3.99.0",
        "styled-components": "^6.1.19"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.46",
        "@types/react-dom": "^18.2.18",
        "@types/styled-components": "^5.1.34",
        "dotenv-cli": "^10.0.0",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.0.4",
        "typescript": "^5.3.3"
    }
}